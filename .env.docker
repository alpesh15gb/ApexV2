# =================================================
# SQL EXPRESS PUNCH LOGS DATABASE
# =================================================
# Database: etimetracklite1
# Table: DeviceLogs_{month}_{year} (dynamic table name)
# Joined with Employees table on UserId = EmployeeCodeInDevice

SQLEXPRESS_HOST=host.docker.internal
SQLEXPRESS_PORT=1433
SQLEXPRESS_DATABASE=etimetracklite1
SQLEXPRESS_USERNAME=essl
SQLEXPRESS_PASSWORD=Keystone@456
SQLEXPRESS_TRUST_CERT=true

# =================================================
# MYSQL HIKVISION DATABASE  
# =================================================
# Table: hik_attendance_logs
# Columns: emp_code, person_name, auth_datetime, direction, 
#          device_name, access_date, access_time, emp_dept, 
#          card_no, processed

HIKVISION_DB_HOST=host.docker.internal
HIKVISION_DB_PORT=3306
HIKVISION_DB_DATABASE=etimetracklite1
HIKVISION_DB_USERNAME=root
HIKVISION_DB_PASSWORD=Keystone@456
HIKVISION_TABLE=hik_attendance_logs
